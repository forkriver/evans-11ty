<!-- Open Graph -->
<meta property="og:url"          content="{{ permalink | canonicalize }}" />
<meta property="og:type"         content="{{ layout }}" />
<meta property="og:title"        content="{{ title | safe }}" />
{%- if excerpt %}
<meta property="og:description"  content="{{ excerpt | safe  }}" />
{%- else  %}
<meta property="og:description"  content="The Evans Theatre: Brandon's indiest indie cinema" />
{%- endif %}
{%- if featured_img %}
<meta property="og:image"        content="{% heroURL 'src' + featured_img %}" />
<meta property="og:image:width"  content="{% heroWidth 'src' + featured_img %}" />
<meta property="og:image:height" content="{% heroHeight 'src' + featured_img %}" />
{%- else  %}
<meta property="og:image"        content="{% heroURL 'src/images/evans-logo.jpg' %}" />
<meta property="og:image:width"  content="{% heroWidth 'src/images/evans-logo.jpg' %}" />
<meta property="og:image:height" content="{% heroHeight 'src/images/evans-logo.jpg' %}" />
{%- endif %}
<!-- End Open Graph -->